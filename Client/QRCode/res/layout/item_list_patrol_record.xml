<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_patrol_user"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="mcy" />

    <TextView
        android:id="@+id/txt_patrol_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/txt_patrol_user"
        android:text="TextView" />

    <TextView
        android:id="@+id/txt_patrol_qrcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_patrol_user"
        android:text="TextView" />

    <TextView
        android:id="@+id/txt_patrol_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_patrol_qrcode"
        android:layout_alignBottom="@+id/txt_patrol_qrcode"
        android:layout_alignParentRight="true"
        android:text="已上报" />

</RelativeLayout>
