<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp" >

    <TextView
        android:id="@+id/item_txt_emergency_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textSize="15sp"
        android:text="TextView" />

    <TextView
        android:id="@+id/item_txt_emergency_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="39dp"
        android:layout_toRightOf="@+id/item_txt_emergency_id"
        android:textSize="15sp"
        android:text="TextView" />

    <TextView
        android:id="@+id/item_txt_emergency_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="34dp"
        android:layout_toRightOf="@+id/item_txt_emergency_source"
        android:textSize="15sp"
        android:text="TextView" />

    <TextView
        android:id="@+id/item_txt_emergency_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/item_txt_emergency_id"
        android:textSize="20sp"
        android:text="TextView" />

    <TextView
        android:id="@+id/item_txt_emergency_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_txt_emergency_description"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="TextView" />

</RelativeLayout>
