<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:background="@drawable/no_corner_bg"
    android:padding="5dp" >

    <TextView
        android:id="@+id/txt_data_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/txt_data_name"
        android:layout_marginTop="3dp"
        android:text="数据类型"
         />

    <TextView
        android:id="@+id/txt_data_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_data_download"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_data_type"
        android:layout_marginTop="3dp"
        android:layout_toLeftOf="@+id/btn_data_download"
        android:text="TextView"
         />

    <Button
        android:id="@+id/btn_data_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="打开"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_data_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="下载" />

</RelativeLayout>
